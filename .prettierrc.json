{
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": false,
  "singleQuote": true,
  "overrides": [
    {
      "files": ["*.html", ".ejs"],
      "options": {
        "tabWidth": 4
      }
    }
  ],
  "files": {
    "associations": {
      "*.ejs": "html",
      "*.css": "postcss"
    }
  },
  "emmet": {
    "includeLanguages": {
      "postcss": "css",
      "ejs": "html"
    },
    "syntaxProfiles": {
      "postcss": "css",
      "ejs": "html"
    }
  }
}
